\newboolean{have_ext}
\newboolean{have_erosion}
\setboolean{have_ext}{false}
\setboolean{have_erosion}{@build_extension_erosion@}

\let\olddir\dir

\ifthenelse{\boolean{have_erosion}}{\setboolean{have_ext}{true}}{}

\ifthenelse{\boolean{have_ext}} {\part{Glimmer-CISM Extensions}}

\ifthenelse{\boolean{have_erosion}} {
      \renewcommand{\dir}{\olddir/erosion}
      \input{\dir/erosion.tex}
    }{}

\renewcommand{\dir}{\olddir}
